<UserControl x:Class="Sklep.Login.Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sklep.Login"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <UserControl.Resources>
        <local:LoginViewModel x:Key="Login"/>
    </UserControl.Resources>

    <Border Padding="10">
        <StackPanel>
            <TextBlock Margin="10" TextWrapping="Wrap" Text="Proszę się zalogować"/>
            <TextBlock Margin="10" TextWrapping="Wrap" Text="e-mail"/>
            <TextBox x:Name="LogName" Margin="10" Height="23" TextWrapping="Wrap" Text="TextBox"/>
            <TextBlock Margin="10" TextWrapping="Wrap" Text="Password"/>
            <PasswordBox x:Name="PassName" Margin="10" />
            <Button Margin="10" Content="Login" Command="{Binding SendTryLogin, Mode=OneWay, Source={StaticResource Login}}"  />


        </StackPanel>
    </Border>
</UserControl>
